<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- 1. Increase upload size limit to 100 MB -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100 MB in bytes -->
      </requestFiltering>
    </security>

    <!-- 2. Increase request timeout to 5 minutes -->
    <httpRuntime executionTimeout="300" maxRequestLength="102400" />
    <serverRuntime uploadReadAheadSize="104857600" />

    <!-- 3. Enable Node.js routing to prevent 404 errors -->
    <rewrite>
      <rules>
        <rule name="NodeJS Routing" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/" /> <!-- Redirect all to root for NestJS routing -->
        </rule>
      </rules>
    </rewrite>

    <!-- 4. Default document for NestJS entry point -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="main.js" /> <!-- ðŸ‘ˆ Your NestJS entry point (usually main.js or dist/main.js) -->
      </files>
    </defaultDocument>

    <!-- 5. Disable directory browsing for security -->
    <directoryBrowse enabled="false" />

    <!-- 6. Enable compression for faster API responses -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/json" enabled="true" />
        <add mimeType="text/json" enabled="true" />
        <add mimeType="text/plain" enabled="true" />
      </dynamicTypes>
    </httpCompression>

  </system.webServer>
</configuration>
   