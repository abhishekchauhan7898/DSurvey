<configuration>
  <system.webServer>

    <!-- 1. Handle requests to main.js using iisnode -->
    <handlers>
      <add name="iisnode" path="dist/main.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- 2. Rewrite all requests to main.js for API routing -->
    <rewrite>
      <rules>
        <rule name="DynamicContent" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/dist/main.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- 3. Default document for NestJS entry point -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="dist/main.js" />
      </files>
    </defaultDocument>

    <!-- 4. Disable directory browsing for security -->
    <directoryBrowse enabled="false" />

    <!-- 5. Enable compression for faster API responses -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/json" enabled="true" />
        <add mimeType="text/json" enabled="true" />
        <add mimeType="text/plain" enabled="true" />
      </dynamicTypes>
    </httpCompression>

    <!-- 6. Configure iisnode to use Node.js -->
    <iisnode
      nodeProcessCommandLine="%ProgramFiles%\nodejs\node.exe"
      loggingEnabled="true"
      devErrorsEnabled="true"
    />

  </system.webServer>
</configuration>
