<!-- <?xml version="1.0" encoding="utf-8"?> -->
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="dist/main.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- 1. Increase upload size limit to 100 MB -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="104857600" /> <!-- 100 MB in bytes -->
      </requestFiltering>
    </security>

    <!-- 2. Increase request timeout to 5 minutes -->
    <httpRuntime executionTimeout="300" maxRequestLength="102400" />
    <serverRuntime uploadReadAheadSize="104857600" />

    <!-- 3. Enable Node.js routing to prevent 404 errors -->
    <rewrite>
      <rules>
        <rule name="NodeJS Routing" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="dist/main.js" /> <!-- Redirect all to root for NestJS routing -->
        </rule>
      </rules>
    </rewrite>

    <!-- 4. Default document for NestJS entry point -->
    <defaultDocument enabled="true">
      <files>
        <clear />
        <add value="dist/main.js" /> <!-- ðŸ‘ˆ Your NestJS entry point (usually main.js or
        dist/main.js) -->
      </files>
    </defaultDocument>

    <!-- 5. Disable directory browsing for security -->
    <directoryBrowse enabled="false" />

    <!-- 6. Enable compression for faster API responses -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="text/css" enabled="true" />
        <add mimeType="text/html" enabled="true" />
        <add mimeType="text/json" enabled="true" />
        <add mimeType="text/plain" enabled="true" />
      </dynamicTypes>
    </httpCompression>

  <!-- Error pages -->
    <httpErrors existingResponse="PassThrough" />

    <!-- Static file handling -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <!-- Logging -->
   <iisnode loggingEnabled="true" devErrorsEnabled="true" />
  </system.webServer>
</configuration>